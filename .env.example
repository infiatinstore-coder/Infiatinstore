# ==============================================
# DATABASE
# ==============================================
DATABASE_URL="postgresql://user:password@localhost:5432/infiyastore?schema=public"

# ==============================================
# JWT & AUTHENTICATION
# ==============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-32-character-hex-secret-change-this-in-production"

# ==============================================
# APP CONFIGURATION
# ==============================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Infiatin Store"

# ==============================================
# ADMIN \u0026 ALERTS
# ==============================================
# Email for admin notifications and alerts
ADMIN_EMAIL="admin@infiatin.store"
ALERT_EMAIL="admin@infiatin.store"

# ==============================================
# PAYMENT GATEWAY - MIDTRANS
# ==============================================
# Get from: https://dashboard.sandbox.midtrans.com/ (for sandbox)
# Production: https://dashboard.midtrans.com/
MIDTRANS_CLIENT_KEY="SB-Mid-client-xxxxx"
MIDTRANS_SERVER_KEY="SB-Mid-server-xxxxx"
MIDTRANS_IS_PRODUCTION="false"
NEXT_PUBLIC_MIDTRANS_CLIENT_KEY="SB-Mid-client-xxxxx"
NEXT_PUBLIC_MIDTRANS_IS_PRODUCTION="false"

# Alternative: XENDIT
# Get from: https://dashboard.xendit.co/
XENDIT_SECRET_KEY="xnd_development_xxxxx"
XENDIT_PUBLIC_KEY="xnd_public_development_xxxxx"
XENDIT_CALLBACK_TOKEN=""

# ==============================================
# SHIPPING API - RAJAONGKIR
# ==============================================
# Get from: https://rajaongkir.com/
RAJAONGKIR_API_KEY=""
RAJAONGKIR_ACCOUNT_TYPE="starter" # starter, basic, pro

# ==============================================
# EMAIL SERVICE - RESEND
# ==============================================
# Get from: https://resend.com/
RESEND_API_KEY=""
RESEND_FROM_EMAIL="noreply@infiya.store"

# Alternative: SENDGRID
SENDGRID_API_KEY=""
SENDGRID_FROM_EMAIL=""

# ==============================================
# SMTP - FOR EMAIL TESTING ONLY
# ==============================================
# ⚠️ JANGAN COMMIT .env KE GIT!
# Provider: Brevo (previously Sendinblue)
# Get API key from: https://app.brevo.com/settings/keys/smtp
SMTP_HOST="smtp-relay.brevo.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-brevo-login-email@example.com"
SMTP_PASS="your-brevo-smtp-api-key-here"
SMTP_FROM="verified-sender@yourdomain.com"

# ==============================================
# WHATSAPP NOTIFICATIONS (via n8n + WAHA)
# ==============================================
# Setup: Configure n8n workflows to receive webhooks and forward to WAHA
# n8n docs: https://docs.n8n.io/
# WAHA docs: https://waha.devlike.pro/

# n8n Webhook URLs (create 4 workflows in n8n)
N8N_WEBHOOK_ORDER_CREATED=""
N8N_WEBHOOK_PAYMENT_SUCCESS=""
N8N_WEBHOOK_ORDER_SHIPPED=""
N8N_WEBHOOK_OTP=""

# WhatsApp API Key (for authentication if needed)
WHATSAPP_API_KEY=""

# Legacy WhatsApp APIs (optional, not used by default)
# Fonnte - https://fonnte.com/
FONNTE_API_KEY=""

# Wablas - https://wablas.com/
WABLAS_API_URL=""
WABLAS_API_TOKEN=""

# ==============================================
# AI INTEGRATION - GOOGLE GEMINI
# ==============================================
# Get from: https://aistudio.google.com/app/apikey
# Free tier: 15 RPM (requests per minute)
GEMINI_API_KEY=""

# Model options: gemini-1.5-flash (fast), gemini-1.5-pro (quality)
GEMINI_MODEL="gemini-1.5-flash"

# Groq - Alternative AI (very fast inference)
# Get from: https://console.groq.com/keys
# Free tier: 30 RPM, 14,400 requests/day
GROQ_API_KEY=""
GROQ_MODEL="llama-3.3-70b-versatile"

# ==============================================
# FILE STORAGE (Optional - Future)
# ==============================================
# Cloudinary
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# AWS S3
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_REGION=""

# ==============================================
# MONITORING & ANALYTICS (Optional)
# ==============================================
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=""

# Sentry Error Tracking
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# ==============================================
# REDIS (Optional - For Caching)
# ==============================================
REDIS_URL="redis://localhost:6379"

# ==============================================
# DEVELOPMENT ONLY
# ==============================================
# Set to "true" to enable debug logs
DEBUG="false"

# Hugging Face - Fallback AI (100% free, no rate limits)
# Get from: https://huggingface.co/settings/tokens
# Free tier: Unlimited (slower than Gemini/Groq but reliable)
HUGGINGFACE_API_KEY=""
HUGGINGFACE_MODEL="mistralai/Mistral-7B-Instruct-v0.3"
